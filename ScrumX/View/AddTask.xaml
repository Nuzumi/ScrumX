<Window x:Class="ScrumX.View.AddTask"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScrumX.View"
        mc:Ignorable="d"
        Title="AddTask" Height="300" Width="300" Name="Window" WindowStyle="None">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Label Content="tytul" Margin="10,6,10,6"/>
        <Label Content="Projekt" Grid.Row="1" Margin="10,6,10,6"/>
        <Label Content="Sprint" Grid.Row="2" Margin="10,6,10,6"/>
        <Label Content="Opis" Grid.Row="3" Margin="10,6,10,6"/>
        <Button Content="ok" Margin="10" Grid.Row="4" Grid.ColumnSpan="2" Command="{Binding AddTaskCommand}" CommandParameter="{Binding ElementName=Window}" />
    </Grid>
</Window>
