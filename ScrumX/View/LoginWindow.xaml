<Window x:Class="ScrumX.View.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScrumX.View"
        xmlns:ViewModel="clr-namespace:ScrumX.ViewModel"
        mc:Ignorable="d"
        Title="LoginWindow" Height="175" Width="250" MinHeight="175" MinWidth="200">
    <Window.DataContext>
        <ViewModel:LoginVM/>
    </Window.DataContext>
    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="5"/>
        </Style>
        <Style TargetType="Button" x:Key="loginVis">
            <Setter Property="Visibility" Value="Collapsed"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsVisibleLogin}" Value="True">
                    <Setter Property="Visibility" Value="Visible"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="Button" x:Key="RegisterVis">
            <Setter Property="Visibility" Value="Collapsed"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsVisibleLogin}" Value="False">
                    <Setter Property="Visibility" Value="Visible"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid Margin="8">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Label Content="{Binding LabeleContent}" Grid.ColumnSpan="2" Margin="1" HorizontalContentAlignment="Center" FontSize="14"/>
        <Label Content="Name" Grid.Row="1"/>
        <Label Content="Password" Grid.Row="2"/>
        <TextBox Grid.Column="1"  Grid.Row="1"/>
        <TextBox Grid.Column="1" Grid.Row="2"/>
        <WrapPanel Grid.Row="3" Grid.ColumnSpan="2" HorizontalAlignment="Center" Margin="5">
            <Button Content="OK" Margin=" 1,1,8,1" Command="{Binding OkComamnd}"/>
            <Button Content="Register" Margin="8,1,8,1" Style="{StaticResource RegisterVis}" Command="{Binding RegisterCommand}"/>
            <Button Content="Sign in" Margin="8,1,1,1" Style="{StaticResource loginVis}" Command="{Binding LoginCommand}"/>
        </WrapPanel>
    </Grid>
</Window>
